<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.romulo.primeiroapp.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Calculadora IMC"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/alturaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="Altura"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/pesoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alturaUsuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:ems="10"
            android:hint="Peso"
            android:inputType="numberDecimal" />


        <Button
            android:id="@+id/botaoCalcula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pesoUsuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:onClick="botaoClicado"
            android:text="Calcular" />

        <TextView
            android:id="@+id/resultadoCalculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/botaoCalcula"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="" />

        <TextView
            android:id="@+id/conclusao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
